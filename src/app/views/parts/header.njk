<header>
    <div class="container">
        <a href="/">
            <div class="logo">
                <h1>Launchstore</h1>
                <h2>Buy and Sell</h2>
            </div>
        </a>

        <form class="search" method="GET" action="/products/search">
            <input 
                type="text"
                name="filter"
                placeholder="Search for products"
                {% if search.term %}
                    value={{search.term}}
                {% endif %}
            >
        </form>

        <nav class="primary">
            <ul>
                <li>
                    <a href="/products/create">
                        <i class="material-icons">add</i>
                        New Ads
                    </a>
                </li>
                <li class="accounts">
                    <a href="/accounts">
                        <i class="material-icons">account_circle</i>
                        My account
                    </a>
                    {% if session.userId %}                    
                        <ul class="submenu">
                            <li>
                                <a href="/users">My acoount</a>
                            </li>
                            <li>
                                <a href="/users">My orders</a>
                            </li>
                            <li>
                                <a href="/users">My sales</a>
                            </li>
                            <li>
                                <form action="/users/logout" method="POST">
                                    <button>Logout</button>
                                </form>
                            </li>
                        </ul>
                    {% endif %}
                </li>
            </ul>
        </nav>

    </div>

</header>