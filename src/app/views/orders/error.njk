{% extends "layout.njk" %}
{% import "parts/card.njk" as cards%}


{% block content %}

{% call cards.render('', 'order-error container') %}

    <div class="error-lottie"></div>
    <h2>Sorry</h2>

    <p>
        We can't process your order.
    </p>
    <a href="#" onclick="history.back()">Try again</a>

{% endcall %}

<script src="/lottie.min.js"></script>

<script>
    const element = document.querySelector('.error-lottie')

    lottie.loadAnimation({
        container: element, // the dom element that will contain the animation
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/40483-error.json' // the path to the animation json
        });
</script>


{% endblock content %}